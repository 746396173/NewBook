<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_normal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_shelf_iv_cover"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:padding="@dimen/padding_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/item_shelf_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="神墓"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/item_shelf_tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="辰东"
                android:textColor="@color/textAssist"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/item_shelf_tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="简介"
                android:textColor="@color/textAssist"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/item_shelf_tv_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="[棉花糖小说]"
                android:textColor="@color/textAssist"
                android:textSize="@dimen/text_small" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_wide" />
</LinearLayout>
